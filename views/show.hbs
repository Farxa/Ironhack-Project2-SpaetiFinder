{{/if}}
</div>

</div>
<h3>Reviews</h3>

{{!-- List the reviews --}}

{{#if spaeti.reviews}}
	{{#each spaeti.reviews}}
		<div class="card mb-3">
      <div class="card-body">
      <h4 class= "card-title">{{user}}</h3>
			<p class="card-text">Review: {{text}}</p>
		</div>
 
    
    <form action="/spaeti/{{spaeti._id}}/reviews?_method=DELETE" method="POST">
      <button class="btn btn-sm btn-danger">Delete</button>
    </form>
       </div>
	{{/each}}
{{else}}

<p>No reviews yet</p>

{{/if}}

<h3>Add a review</h3>

<form action="/spaeti/{{spaeti._id}}/reviews" method="POST">
	<label for="text">Your review: </label>
	<input type="text" name="text" id="text">
	<button type="submit">Add this review</button>
</form>



